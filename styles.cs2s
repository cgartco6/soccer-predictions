body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

header {
    background: #35424a;
    color: white;
    padding: 20px;
    text-align: center;
}

main {
    padding: 20px;
    max-width: 800px;
    margin: auto;
    background: white;
    border-radius: 8px;
}

footer {
    text-align: center;
    padding: 20px;
    background: #35424a;
    color: white;
    position: fixed;
    width: 100%;
    bottom: 0;
}
